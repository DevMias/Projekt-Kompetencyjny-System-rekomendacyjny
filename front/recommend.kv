#:kivy 1.0.9

<WindowManager>:
    id: screen_manager
    Welcome:
    ChoosePerson:
    ChooseRecommendationMethod:
    LoadingScreen:
    RecommendedProducts:


<Welcome>:
    name: "welcome"

    BoxLayout:
        orientation: "vertical"

        Label:
            font_size: 70
            text: "Witaj w aplikacji RecommendPy!"
            size_hint: 1, 0.5

        FloatLayout:
            Button:
                text: "Zaczynamy"
                on_release: app.root.current = "choose"
                size_hint: .3, .2
                pos_hint: {'center_x':.5, 'center_y': .5}
                background_color: (0, 0.7, 0.3, 1)

<ChoosePerson>:
    name: "choose"

    BoxLayout:
        orientation: "vertical"

        Label:
            font_size: 50
            size_hint: 1, 0.5
            text: "Wybierz osobę, której chcesz zarekomendować produkty"

        #Tutaj slider (to jeszcze zrobie ;))

        FloatLayout:
            Button:
                text: "Wróć"
                on_release: app.root.current = "welcome"
                size_hint: .3, .2
                pos_hint: {'center_x':.2, 'center_y': .2}
                background_color: (0, 0.7, 0.3, 1)

            Button:
                text: "Potwierdź"
                on_release: app.root.current = "recommend"
                size_hint: .3, .2
                pos_hint: {'center_x':.8, 'center_y': .2}
                background_color: (0, 0.7, 0.3, 1)

<ChooseRecommendationMethod>:
    name: "recommend"

    BoxLayout:
        orientation: "vertical"

        Label:
            font_size: 50
            size_hint: 1, 0.5
            text: "Wybierz osobę, której chcesz zarekomendować produkty"

        FloatLayout:

            Button:
                text: "Podobieństwo między produktami"
                on_release: app.root.current = "load"
                size_hint: .3, .4
                pos_hint: {'center_x':.2, 'center_y': .5}
                background_color: (0, 0.7, 0.3, 1)

            Button:
                text: "Podobieństwo między osobami"
                on_release: app.root.current = "load"
                size_hint: .3, .4
                pos_hint: {'center_x':.8, 'center_y': .5}
                background_color: (0, 0.7, 0.3, 1)

        FloatLayout:

            Button:
                text: "Wróć"
                on_release: app.root.current = "choose"
                size_hint: .3, .4
                pos_hint: {'center_x':.5, 'center_y': .5}
                background_color: (0, 0.7, 0.3, 1)

<LoadingScreen>:
    name: "load"

    BoxLayout:
        orientation: 'vertical'

        Label:
            font_size: 50
            size_hint: 1, 0.5
            text: "Rozpocznij rekomendacje"

        #tutaj progressBar

        FloatLayout:

            Button:
                text: "Wróć"
                size_hint: .3, .2
                pos_hint: {'center_x':.2, 'center_y': .2}
                background_color: (0, 0.7, 0.3, 1)
                on_release: app.root.current = "recommend"

            Button:
                text: 'Rozpocznij rekomendacje'
                size_hint: .3, .2
                pos_hint: {'center_x':.8, 'center_y': .2}
                background_color: (0, 0.7, 0.3, 1)
                on_release: root.start_loading()

<RecommendedProducts>:
    name: "recommended"

    BoxLayout:
        orientation: "vertical"

        Label:
            font_size: 50
            size_hint: 1, 0.5
            text: "Zarekomendowane produkty"

        #tutaj slider z rekomendowanymi produktami

        FloatLayout:

            Button:
                text: "Menu główne"
                on_release: app.root.current = "choose"
                size_hint: .3, .2
                pos_hint: {'center_x':.2, 'center_y': .2}
                background_color: (0, 0.7, 0.3, 1)

            Button:
                text: "Zamknij"
                on_release: app.stop()
                size_hint: .3, .2
                pos_hint: {'center_x':.8, 'center_y': .2}
                background_color: (0, 0.7, 0.3, 1)
