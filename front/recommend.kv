#:kivy 1.0.9

<WindowManager>:
    id: screen_manager
    Welcome:
    ChoosePerson:
    ChooseRecommendationMethod:
    LoadingScreen:
    RecommendedProducts:


<Welcome>:
    name: "welcome"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            font_size: 70
            text: "Witaj w aplikacji RecommendPy!"
            size_hint: 1, 0.5

        FloatLayout:
            Button:
                text: "Zaczynamy"
                on_release: app.root.current = "choose"
                size_hint: .3, .2
                pos_hint: {'center_x':.5, 'center_y': .5}
                background_color: (0, 0.7, 0.3, 1)

<ChoosePerson>:
    name: "choose"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            font_size: 50
            size_hint: 1, 0.5
            text: "Wybierz osobę, której chcesz zarekomendować produkty"

        BoxLayout:
            orientation: "horizontal"
            size: root.width, root.height / 2

            FloatLayout:

                Button:
                    text: '<'
                    size_hint: .1, .4
                    pos_hint: {'center_x':.1, 'center_y': .2}

                Widget:
                    size_hint: .6, .8
                    pos_hint: {'center_x':.5, 'center_y': .2}

                    canvas:
                        Color:
                            rgba: 1, 0, 0, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                Button:
                    text: '>'
                    size_hint: .1, .4
                    pos_hint: {'center_x':.9, 'center_y': .2}

        FloatLayout:
            Button:
                text: "Wróć"
                on_release: app.root.current = "welcome"
                size_hint: .3, .2
                pos_hint: {'center_x':.2, 'center_y': .2}
                background_color: (0, 0.7, 0.3, 1)

            Button:
                text: "Potwierdź"
                on_release: app.root.current = "recommend"
                size_hint: .3, .2
                pos_hint: {'center_x':.8, 'center_y': .2}
                background_color: (0, 0.7, 0.3, 1)

<ChooseRecommendationMethod>:
    name: "recommend"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            font_size: 50
            size_hint: 1, 0.5
            text: "Wybierz osobę, której chcesz zarekomendować produkty"

        FloatLayout:

            Button:
                text: "Podobieństwo między produktami"
                on_release: app.root.current = "load"
                size_hint: .3, .4
                pos_hint: {'center_x':.2, 'center_y': .5}
                background_color: (0, 0.7, 0.3, 1)

            Button:
                text: "Podobieństwo między osobami"
                on_release: app.root.current = "load"
                size_hint: .3, .4
                pos_hint: {'center_x':.8, 'center_y': .5}
                background_color: (0, 0.7, 0.3, 1)

        FloatLayout:

            Button:
                text: "Wróć"
                on_release: app.root.current = "choose"
                size_hint: .3, .4
                pos_hint: {'center_x':.5, 'center_y': .5}
                background_color: (0, 0.7, 0.3, 1)

<LoadingScreen>:
    name: "load"

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            id: prg_lab
            font_size: 50
            size_hint: 1, 0.5
            text: "0% progress"

        ProgressBar:
            id: prg_bar
            min: 0
            max: 1
            size_hint_x: .8
            pos_hint: {'x':.1}

        FloatLayout:

            Button:
                text: "Wróć"
                size_hint: .3, .2
                pos_hint: {'center_x':.2, 'center_y': .2}
                background_color: (0, 0.7, 0.3, 1)
                on_release: app.root.current = "recommend"

            Button:
                id: start_recommend
                text: 'Rozpocznij rekomendacje'
                size_hint: .3, .2
                pos_hint: {'center_x':.8, 'center_y': .2}
                background_color: (0, 0.7, 0.3, 1)
                on_release: root.start_loading()

<RecommendedProducts>:
    name: "recommended"
    id: recommended

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            font_size: 50
            size_hint: 1, 0.5
            text: "Zarekomendowane produkty"

        BoxLayout:
            orientation: "horizontal"
            size: root.width, root.height / 2

            FloatLayout:

                Button:
                    text: '<'
                    size_hint: .1, .4
                    pos_hint: {'center_x':.1, 'center_y': .2}

                Widget:
                    size_hint: .6, .8
                    pos_hint: {'center_x':.5, 'center_y': .2}

                    canvas:
                        Color:
                            rgba: 1, 0, 0, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                Button:
                    text: '>'
                    size_hint: .1, .4
                    pos_hint: {'center_x':.9, 'center_y': .2}

        FloatLayout:

            Button:
                text: "Menu główne"
                on_release: app.reset_app()
                size_hint: .3, .2
                pos_hint: {'center_x':.2, 'center_y': .2}
                background_color: (0, 0.7, 0.3, 1)

            Button:
                text: "Zamknij"
                on_release: app.stop()
                size_hint: .3, .2
                pos_hint: {'center_x':.8, 'center_y': .2}
                background_color: (0, 0.7, 0.3, 1)
